datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

model Account {
  id         Int    @id @default(autoincrement())
  username   String @unique
  password   String
  name       String
  platformId Int
  extraInfos String // Storing JSON as a string

  Platform Platform @relation(fields: [platformId], references: [id])
  products Node[]   @relation("AccountProducts")
  Logs     Log[]
}

model Platform {
  id   Int    @id @default(autoincrement())
  name String
  url  String

  Accounts Account[]
}

model Log {
  id        Int      @id @default(autoincrement())
  message   String
  logLevel  String
  dateTime  DateTime @default(now())
  nodeId    Int?
  accountId Int?

  Node    Node?    @relation(fields: [nodeId], references: [id])
  Account Account? @relation(fields: [accountId], references: [id])
}

model Node {
  id          Int      @id @default(autoincrement())
  name        String
  order       Int?
  type        String
  url         String
  parentId    Int?
  extraInfos  String // Storing JSON as a string
  addedAt     DateTime @default(now())
  updatedAt   DateTime @updatedAt
  customName  String?
  status      String   @default("pending") // Status of the node: downloading, downloaded, pending, error
  totalSize   Int? // Optional total size for leaf nodes
  currentSize Int? // Optional current size for leaf nodes
  unit        String? // Optional unit for the size

  parent   Node?     @relation("NodeToNode", fields: [parentId], references: [id])
  children Node[]    @relation("NodeToNode")
  accounts Account[] @relation("AccountProducts")

  Logs Log[]
}

model Setting {
  id        Int    @id @default(autoincrement())
  key       String @unique
  value     String
  valueType String
}
