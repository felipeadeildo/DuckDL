datasource db {
  provider = "sqlite"
  url      = "file:db.sqlite"
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Account {
  id         Int    @id @default(autoincrement())
  username   String
  password   String
  platformId Int
  status     String // can be 'stoped', 'listing_products', 'downloading_products' or 'error'
  extraInfos String // Storing JSON as a string

  Platform Platform @relation(fields: [platformId], references: [id])
  Nodes    Node[]   @relation("AccountToNode")
  Logs     Log[]
}

model Platform {
  id        Int      @id @default(autoincrement())
  name      String
  key       String
  url       String
  version   Float
  addedAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  Accounts Account[]
}

model Log {
  id        Int      @id @default(autoincrement())
  message   String
  logLevel  String
  dateTime  DateTime @default(now())
  nodeId    Int?
  accountId Int?

  Node    Node?    @relation(fields: [nodeId], references: [id])
  Account Account? @relation(fields: [accountId], references: [id])
}

model Node {
  id          Int      @id @default(autoincrement())
  name        String
  order       Int?
  type        String
  url         String
  parentId    Int?
  extraInfos  String // Storing JSON as a string
  addedAt     DateTime @default(now())
  updatedAt   DateTime @updatedAt
  customName  String?
  status      String   @default("pending") // Status of the node: downloading, downloaded, pending, error
  totalSize   Int? // Optional total size for leaf nodes
  currentSize Int? // Optional current size for leaf nodes
  unit        String? // Optional unit for the size
  accountId   Int

  parent   Node?  @relation("NodeToNode", fields: [parentId], references: [id])
  children Node[] @relation("NodeToNode")

  Account Account @relation(fields: [accountId], references: [id], name: "AccountToNode", onDelete: Cascade)
  Logs    Log[]
}

model Setting {
  id        Int    @id @default(autoincrement())
  key       String @unique
  value     String
  valueType String
}
